# Custom status line
hardstatus alwayslastline "%{b kw}%H %{r}%1` %{w}| %{g}%c %{w}| %{y}%D %Y %M %d %{w}| %{g}%l %{w}| %{-b kw}%u %-Lw%{= rW}%50> %n%f %t %{-}%+Lw%<"

# reallong scrollback
defscrollback 100000

# Make the background refresh its color properly
defbce "on"

# default screens
screen -t vim
screen -t bash
screen -t server
